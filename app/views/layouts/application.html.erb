<!DOCTYPE html>
<html>
  <head>
    <title>Gdesign</title>
    <%= csrf_meta_tags %>

    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"> -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="softblue_bg">
    <div class="container fill">
      <div id="nav">
        <% if logged_in? %>
          <%= link_to "Logout", logout_path, {method: "DELETE", class: "btn btn-sm"} %>
          <%= link_to current_user.name, user_path(current_user.id), {class: "btn blue_bg btn-sm"} %>
        <% else %>
          <%= link_to "Login", new_session_path, {class: "btn btn-primary btn-sm"} %>
        <% end %>
        <div id="home"><%= link_to "Home", "/", {class: "green"} %></div>
      </div>

      <%= yield %>
  
    </div>
  </body>
</html>
